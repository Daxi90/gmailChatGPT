{
    "name": "ChatGPT + GMail",
    "version": "1.0.0",
    "description": "This is an extension to connect GMail with GPT",
    "manifest_version": 3,
    "author": "David Hollerw√∂ger",
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": ["https://mail.google.com/*"],
            "js": ["gmail-script.js"]
        }
    ],
    "host_permissions": [
        "https://mail.google.com/*"
    ]
}